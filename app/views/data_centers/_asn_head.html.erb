<tr>
  <th class="column-md align-middle">
    ASN
    <i class="fas fa-info-circle small"
      data-toggle="tooltip"
      data-placement="top"
      title="<%= t('definitions.asn_full_name')%>">
    </i>
  </th>
  <th class="column-sm align-middle">
    Average score&nbsp;<i class="fas fa-info-circle small ml-1"
                          data-toggle="tooltip"
                          data-placement="top"
                          title="<%= t('definitions.average_score') %>"></i>
  </th>
  <th class="column-lg align-middle">Data Centers</th>
  <th class="column-md align-middle">
    Population
    <i class="fas fa-info-circle small"
      data-toggle="tooltip"
      data-placement="top"
      title="<%= t('definitions.population_asn') %>">
    </i>
    <br />
    <small class="text-muted">(<%= @results[:total_population] %>)</small>
  </th>
  <th class="column-md align-middle">
    Delinquent
    <i class="fas fa-info-circle small"
       data-toggle="tooltip"
       data-placement="top"
       title="<%= t('definitions.delinquent_asn') %>">
    </i>
    <br />
    <small class="text-muted">
      (<%= @results[:total_delinquent] %> |
      <%= (count_percentage(@results[:total_delinquent], @results[:total_population])) %>%)
    </small>
  </th>
  <% if params[:network] == 'mainnet' %>
    <th class="column-md align-middle">
      Private
      <i class="fas fa-info-circle small"
        data-toggle="tooltip"
        data-placement="top"
        title="<%= t('definitions.private') %>">
      </i>
      <br />
      <small class="text-muted">
        (<%= @results[:total_private] %> |
        <%= (count_percentage(@results[:total_private], @results[:total_population])) %>%)
      </small>
    </th>
  <% end %>
  <th class="column-lg align-middle">
    Active Stake&nbsp;<i class="fas fa-info-circle small"
                         data-toggle="tooltip"
                         data-placement="top"
                         title="<%= t('definitions.active_stake') %>"></i>
    <br />
    <small class="text-muted">
      <%= number_with_delimiter lamports_to_sol(@results[:total_stake]).round(0) %>
    </small>
  </th>
</tr>
