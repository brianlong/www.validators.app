<tr>
  <th class="medium-column">
    ASN
    <i class="fas fa-info-circle"
      data-toggle="tooltip"
      data-placement="top"
      title="<%= t('definitions.asn_full_name')%>">
    </i>
    <br />&nbsp;
  </th>
  <th class="narrower-column">
    Average score
    <i class="fas fa-info-circle"
      data-toggle="tooltip"
      data-placement="top"
      title="<%= t('definitions.average_score') %>">
    </i>
    <br />&nbsp;
  </th>
  <th class="category-column">Data Centers<br />&nbsp;</th>
  <th class="narrower-column">
    Population
    <i class="fas fa-info-circle"
      data-toggle="tooltip"
      data-placement="top"
      title="<%= t('definitions.population_asn') %>">
    </i>
    <br />
    <small class="text-muted">(<%= @results[:total_population] %>)</small>
  </th>
  <th class="narrow-column">
    Delinquent
    <i class="fas fa-info-circle"
       data-toggle="tooltip"
       data-placement="top"
       title="<%= t('definitions.delinquent') %>">
    </i>
    <br />
    <small class="text-muted">
      (<%= @results[:total_delinquent] %> |
      <%= (count_percentage(@results[:total_delinquent], @results[:total_population])) %>%)
    </small>
  </th>
  <th class="medium-column">
    Active Stake
    <i class="fas fa-info-circle"
      data-toggle="tooltip"
      data-placement="top"
      title="<%= t('definitions.active_stake') %>">
    </i>
    <br />
    <small class="text-muted">
      <%= number_with_delimiter lamports_to_sol(@results[:total_stake]).round(0) %>
    </small>
  </th>
</tr>
