<tr>
  <th class="column-md align-middle">Key</th>
  <th class="column-<%= set_column_width %> align-middle">
    ISP
    <i class="fas fa-info-circle small"
       data-toggle="tooltip"
       data-placement="top"
       title="<%= t('definitions.isp_full_name') %>">
    </i>
  </th>
  <th class="column-<%= set_column_width %> align-middle">
    Population
    <i class="fas fa-info-circle small"
       data-toggle="tooltip"
       data-placement="top"
       title="<%= t('definitions.population_isp') %>">
    </i>
    <br />
    <small class="text-muted">(<%= @results[:total_population] %>)</small>
  </th>
  <th class="column-<%= set_column_width %> align-middle">
    Delinquent
    <i class="fas fa-info-circle small"
       data-toggle="tooltip"
       data-placement="top"
       title="<%= t('definitions.delinquent_isp') %>">
    </i>
    <br />
    <small class="text-muted">
      (<%= @results[:total_delinquent] %> |
      <%= (count_percentage(@results[:total_delinquent], @results[:total_population])) %>%)
    </small>
  </th>
  <% if params[:network] == 'mainnet' %>
    <th class="column-<%= set_column_width %> align-middle">
      Private
      <i class="fas fa-info-circle small"
        data-toggle="tooltip"
        data-placement="top"
        title="<%= t('definitions.private') %>">
      </i>
      <br />
      <small class="text-muted">
        (<%= @results[:total_private] %> |
        <%= (count_percentage(@results[:total_private], @results[:total_population])) %>%)
      </small>
    </th>
  <% end %>
  <th class="column-xl align-middle">
    Active Stake&nbsp;<i class="fas fa-info-circle small"
                         data-toggle="tooltip"
                         data-placement="top"
                         title="<%= t('definitions.active_stake') %>">
    </i>
    <br />
    <small class="text-muted">
      <%= number_with_delimiter lamports_to_sol(@results[:total_active_stake_from_active_validators]).round(0) %>
    </small>
    <br />
    Total Stake&nbsp;<i class="fas fa-info-circle small"
                         data-toggle="tooltip"
                         data-placement="top"
                         title="<%= t('definitions.total_stake') %>">
    </i>
    <br />
    <small class="text-muted">
      <%= number_with_delimiter lamports_to_sol(@results[:total_stake]).round(0) %>
    </small>
  </th>
</tr>
