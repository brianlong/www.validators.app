<% @results[:results].each do |dc_key, dc_data| %>
  <tr>
    <td class="column-lg"><%= link_to dc_key, data_center_url(network: params[:network], key: dc_key.gsub('/', '-slash-')) %></td>
    <td class="column-sm"><%= dc_data[:aso] %></td>
    <td class="column-md"><%= dc_data[:count] %></td>
    <td class="column-md">
      <% if dc_data[:delinquent_validators] > 0 %>
        <%= link_to dc_data[:delinquent_validators], 
            data_center_url(network: params[:network], key: dc_key.gsub('/', '-slash-'), filter_by: :delinquent) %>
        <small class="text-muted">
          (<%= (count_percentage(dc_data[:delinquent_validators], dc_data[:count])) %>%)
        </small>
      <% else %>
        <%= dc_data[:delinquent_validators] %>
      <% end %>
    </td>
    <td class="column-lg">
      <%= number_with_delimiter lamports_to_sol(dc_data[:active_stake]).round(0) %>
      (<%= percent_of_total_stake(dc_data[:active_stake], @results[:total_stake]) %>)
    </td>
  </tr>
<% end %>
