<h1 class="page-header"><%= params[:network].capitalize %> Data Centers</h1>
<div class=" mb-4 col-sm-4" role="toolbar" aria-label="filter"> 
  <%= link_to "Data Centers", \
              data_centers_url(network: params[:network], sort_by: :data_center), \
              class: "btn #{[nil, 'data_center'].include?(@sort_by) ? 'btn-primary' : 'btn-outline-primary'}", \
              type: "button" \
  %>
  <%= link_to "ASN",\
              data_centers_url(network: params[:network], sort_by: :asn), \
              class: "btn #{@sort_by == 'asn' ? 'btn-primary' : 'btn-outline-primary'}", \
              type: "button" \
  %>
</div>
<div class="card mb-4">
  <div class="table-responsive-md">
    <table class='table mb-0'>
      <thead>
        <%= render_table_header_by(@sort_by) %>
      </thead>

      <tbody>
        <%= render_table_content_by(@sort_by) %>
      </tbody>
    </table>
  </div>
</div>
