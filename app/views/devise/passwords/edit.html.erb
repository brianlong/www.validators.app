<h1 class="mb-4"><%= t('.change_your_password') %></h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, t('.new_password') do %>
          Password
          <% if @minimum_password_length %>
            <small><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          <% end %>
        <% end %>
        <%= f.password_field :password, autofocus: true,
                             autocomplete: "new-password",
                             class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password') %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group actions">
        <%= f.submit t('.change_my_password'), class: 'btn btn-md btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<hr class="short" />
<%= render "devise/shared/links" %>
