<canvas id="<%= local_assigns[:chart_name] %>"></canvas>
<script type="text/javascript">
    var ctx = document.getElementById("<%= local_assigns[:chart_name] %>").getContext('2d');
    var chart = new Chart(ctx, {
        // The type of chart we want to create
        type: 'scatter',

        // The data for our dataset
        data: {
            //labels: <%= local_assigns[:vector].to_a.count.downto(1).to_a %>,
            datasets: [
                {
                    label: ' <%= local_assigns[:label] %> ',
                    data: <%= local_assigns[:vector] %>.map( (vector_element, index) => ({ x: index, y: vector_element }) ),
                    backgroundColor: '<%= local_assigns[:fill_color] %>',
                }
            ]
        },

        // Configuration options go here
        options: {
            scales: {
                xAxes: [{
                    display: true,
                    ticks: {display: false},
                    gridLines: {display: false},
                    scaleLabel: {
                        display: true,
                        labelString: "<%= local_assigns[:x_axis_desc] ? local_assigns[:x_axis_desc] : 'X Desc' %>",
                        fontColor: '<%= DARK_GREY %>'
                    }
                }],
                yAxes: [{
                    display: true,
                    ticks: {
                        min: 0,
                        padding: 5
                    },
                    gridLines: {
                        display: true,
                        zeroLineColor: '<%= CHART_LINE %>',
                        color: '<%= CHART_LINE %>'
                    },
                    scaleLabel: {
                        display: true,
                        labelString: "<%= local_assigns[:y_axis_desc] ? local_assigns[:y_axis_desc] : 'Y Desc' %>",
                        fontColor: '<%= DARK_GREY %>'
                    }
                }]
            },
            elements: {
                point: {
                    radius: 3
                }
            }

        }

    });
</script>
