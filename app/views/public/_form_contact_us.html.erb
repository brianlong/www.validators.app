<%= form_with model: @contact_request,
              class: 'form',
              method: 'POST',
              local: true,
              url: "/contact-us?locale=#{params[:locale]}" do |f| %>
  <% if @contact_request.errors.any? %>
    <div class="form-errors alert alert-danger">
      <h6> <%= t('error', count: @contact_request.errors.count) %> <%= t('public.contact_us.form.errors') %></h6>
      <ul>
        <% @contact_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='mb-3'>
    <%= label(:contact_request, :name, class: 'required form-label') %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>
  <div class='mb-3'>
    <%= label(:contact_request, :email_address, nil, class: 'required form-label') %>
    <%= f.text_field :email_address, class: 'form-control', required: true %>
  </div>
  <div class='mb-3'>
    <%= label(:contact_request, :telephone), class: 'form-label' %>
    <%= f.text_field :telephone, class: 'form-control' %>
  </div>
  <div class='mb-3'>
    <%= label(:contact_request, :comments, class: 'required form-label') %>
    <%= f.text_area :comments, class: 'form-control', placeholder: t('public.contact_us.form.comments.placeholder') %>
  </div>
  <%= submit_tag t('public.contact_us.form.submit'), class: 'btn btn-md btn-primary' %>
<% end %>
