<%= javascript_pack_tag 'validators/validators_map.js' %>
<%= javascript_pack_tag 'transactions/transactions_stats_component' %>
<%= javascript_pack_tag 'epochs/epoch_stats_component' %>
<%= javascript_pack_tag 'validators/circulating_supply.js' %>
<%= javascript_pack_tag 'software_versions/software_versions_component.js' %>
<%= javascript_pack_tag 'clusters/cluster_numbers_component.js' %>
<%= javascript_pack_tag 'clusters/cluster_performance_stats_component.js' %>
<%= javascript_pack_tag 'sol_prices/sol_price_component' %>

<section class="banner">
  <p class="h2 mb-4 exclamation">
    <%= link_to validators_path(network: params[:network]) do %>
      Looking for the&nbsp;best Validator? <span>Click&nbsp;here!</span>
    <% end %>
  </p>
  <h1 class="heading-primary">Solana <span>Validator</span> Metrics</h1>
</section>

<% if @network == "mainnet" %>
  <%= render "validators/ping_stats_banner" %>
<% end %>

<div id="validators-map">
  <validators-map network="<%= @network %>"/>
</div>

<% unless @network == "pythnet" %>
  <div class="mb-4">
    <%= render 'validators/watchlist_info_banner', half_size: false %>
  </div>
<% end %>

<section class="row">
  <div id="sol-price-component"></div>

  <div id="circulating-supply-component"></div>

  <div id="transactions-stats-component"></div>
</section>

<section class="row">
  <div id="epoch-stats-component"></div>

  <div id="cluster-numbers-component"></div>
</section>

<div id="cluster-performance-stats-component"></div>

<section class="row">
  <% if @network == "pythnet" %>
    <div class="col-lg-6 mb-4">
      <%= render 'validators/watchlist_info_banner', half_size: true %>
    </div>
  <% else %>
    <%= render 'validators/stake_pools_banner' %>
  <% end %>

  <div id="software-versions-component"></div>
</section>
