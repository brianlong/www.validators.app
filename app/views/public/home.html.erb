<%= javascript_pack_tag "validators/validators_map.js" %>
<%= javascript_pack_tag 'transactions/transactions_stats_component' %>
<%= javascript_pack_tag 'validators/circulating_supply.js' %>
<%= javascript_pack_tag 'software_versions/software_versions_component.js' %>
<%= javascript_pack_tag 'clusters/cluster_performance_stats_component.js' %>
<%= javascript_pack_tag 'clusters/cluster_stats_component.js' %>

<section class="banner">
  <h1 class="heading-primary mb-1 mb-md-3">Solana <span>Validator</span> Metrics</h1>
</section>

<% if @network == "mainnet" %>
  <%= render "validators/ping_stats_banner" %>
<% end %>

<div id="validators-map">
  <validators-map network="<%= @network %>" />
</div>

<div class="card mb-4">
  <%= render 'validators/watchlist_info_banner' %>
</div>

<section class="row">
  <% unless @network == "pythnet" %>
    <%= javascript_pack_tag 'sol_prices/sol_price_component' %>
    <div id="sol-price-component"></div>
  <% end %>

  <div id="circulating-supply-component"></div>

  <div id="transactions-stats-component"></div>
</section>

<div id="cluster-stats">
  <cluster-stats-component />
</div>

<div id="distance-stats-component"></div>

<section class="row">
  <% if @network == "pythnet" %>
    <div id="software-versions-component"></div>
  <% else %>
    <%= render 'validators/stake_pools_banner' %>
    <div id="software-versions-component"></div>
  <% end %>
</section>
