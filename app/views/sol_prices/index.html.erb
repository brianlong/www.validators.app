<div class="card pb-3 pl-3 pr-3">
  <div class="card-content">
    <h3 class="card-heading mb-3">Sol Token Prices</h3>
  </div>

  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active chartTabButton" 
         data-toggle="tab" 
         href="#coinGeckoChartTab">
        CoinGecko
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link chartTabButton" 
         data-toggle="tab" 
         href="#ftxChartTab">
        FTX
      </a>
    </li>
  </ul>

  <%= create_filter_links %>

  <!-- Tab panes -->
  <div class="tab-content" id='sol-prices-tab-content'>
    <div class="tab-pane active solPriceChartTab" id="coinGeckoChartTab">
      <%= render 'coin_gecko_chart' %>
    </div>

      <div class="tab-pane fade solPriceChartTab" id="ftxChartTab">
        <%= render 'ftx_chart' %>
      </div>
  </div>
</div>
