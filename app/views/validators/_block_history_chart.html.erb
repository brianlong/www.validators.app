<hr />
<h3>Skipped Slot History</h3>
<canvas id="chart_validator_block_history"></canvas>

<script type="text/javascript">
  var ctx = document.getElementById('chart_validator_block_history').getContext('2d');
  var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'line',

    // The data for our dataset
    data: {
        // x-axis labels
        labels: <%= @data.keys %>,
        // An Array of JSON hashes for each dataset to plot. The y-axis is
        // dynamicly calculated. Look for othe options to control the y-axis if
        // desired.
        datasets: [
          {
            label: 'Skipped Slot %',
            fill: false,
            backgroundColor: 'rgb(85, 239, 196)',
            borderColor: 'rgb(85, 239, 196)',
            radius: 0,
            data: <%= @data.map { |k,v| v[:skipped_slot_percent] }%>
          },
          {
            label: 'Skipped Slot After %',
            fill: false,
            backgroundColor: 'rgb(129, 236, 236)',
            borderColor: 'rgb(129, 236, 236)',
            radius: 0,
            data: <%= @data.map { |k,v| v[:skipped_slots_after_percent] } %>
          },
          {
            label: 'Cluster Skipped Slot %',
            fill: false,
            backgroundColor: 'rgb(116, 185, 255)',
            borderColor: 'rgb(116, 185, 255)',
            radius: 0,
            data: <%= @data.map { |k,v| v[:cluster_skipped_slot_percent] } %>
          }
        ]
    },

    // Configuration options go here
    options: {
      scales: {
				xAxes: [{
					display: true,
					scaleLabel: {
						display: true,
						labelString: 'Counter'
					}
				}],
				yAxes: [{
					display: true,
          ticks: { min: 0},
					scaleLabel: {
						display: true,
						labelString: 'Percent'
					}
				}]
			}
    }
  });
</script>
<hr />
