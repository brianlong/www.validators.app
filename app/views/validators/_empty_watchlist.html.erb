<% trent_mode = local_assigns[:trent_mode] %>

<div class="card">
  <div class="card-content">
    <div class="text-center">
      <h1 class="h4 card-heading">
        Looks like you don't have any favourite validators on <%= params[:network] %> yet.
      </h1>
      <div class="row">
        <div class="col-md text-center">
          <%= link_to "Show all validators",
                      url_for(
                        **validators_search_page_attrs(trent_mode),
                        network: params[:network]
                      ),
                      class: "btn btn-sm btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>


