<%= form_with(method: :get, local: true, class: "flex-fill") do %>
  <div class="form-group-row">
    <div class="input-group">
      <%= text_field_tag(
            :q, '',
            placeholder: 'Validator name, account or data center',
            class: 'form-control',
            value: params[:q],
            required: true,
            autofocus: true
      ) %>
      <%= hidden_field_tag(:network, params[:network]) %>
      <%= hidden_field_tag(:order, params[:order]) %>
      <%= hidden_field_tag(:refresh, params[:refresh]) %>
      <%= submit_tag("Search", class: 'btn btn-sm btn-primary') %>
    </div>
  </div>
<% end %>
