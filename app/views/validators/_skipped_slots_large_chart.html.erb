<script type="text/javascript">
    var ctx = document.getElementById('skipped_slots_large_chart').getContext('2d');
    var dataset = ctx.canvas.dataset;

    var chart = new Chart(ctx, {
        type: 'line',

        data: {
            labels: JSON.parse(dataset.labels),
            datasets: [
                {
                    label: ' Moving Avg  ',
                    fill: false,
                    backgroundColor: '<%= SPARK_LINE_1_TRANSPARENT %>',
                    borderColor: '<%= SPARK_LINE_1 %>',
                    borderWidth: 1,
                    radius: 0,
                    data: <%= @data.map { |k, v| v[:skipped_slot_percent_moving_average] } %>
                },
                {
                    label: ' Actual Skipped Slots  ',
                    fill: false,
                    backgroundColor: '<%= SPARK_LINE_2_TRANSPARENT %>',
                    borderColor: '<%= SPARK_LINE_2 %>',
                    borderWidth: 1,
                    borderDash: [2, 2],
                    radius: 0,
                    data: <%= @data.map { |k, v| v[:skipped_slot_percent] }%>
                },
                {
                    label: ' Cluster Avg',
                    fill: false,
                    backgroundColor: '<%= SPARK_LINE_3_TRANSPARENT %>',
                    borderColor: '<%= SPARK_LINE_3 %>',
                    borderWidth: 1,
                    radius: 0,
                    data: <%= @data.map { |k, v| v[:cluster_skipped_slot_percent_moving_average] } %>
                }
            ]
        },

        options: {
            elements: {
                line: { tension: 0 }
            },
            hover: {
                intersect: false,
            },
            tooltips: {
                enabled: true,
                mode: 'index',
                intersect: false,
                displayColors: false,
                xPadding: 8,
                yPadding: 8,
                callbacks: {
                    label: function(tooltipItem) {
                        if (tooltipItem.datasetIndex == 0) {
                            return "Moving Avg: " + tooltipItem.yLabel;
                        } else if (tooltipItem.datasetIndex == 1) {
                            return "Actual Skipped Slots: " + tooltipItem.yLabel;
                        } else {
                            return "Cluster Avg: " + tooltipItem.yLabel;
                        }
                    },
                    title: function(tooltipItem) {
                        return tooltipItem[0].xLabel + " UTC";
                    },
                }
            },
            responsiveAnimationDuration: 0, // animation duration after a resize
            legend: {
                labels: {
                    fontColor: '<%= DARK_GREY %>',
                    boxWidth: 8,
                    boxHeight: 8,
                    usePointStyle: true,
                    padding: 5,
                    fontSize: 14
                },
            },
            scales: {
                xAxes: [{
                    display: true,
                    ticks: {
                        display: true,
                        minRotation: 0,
                        maxRotation: 0,
                        autoSkip: true,
                        autoSkipPadding: 30
                    },
                    gridLines: { display: false },
                    scaleLabel: {
                        display: true,
                        labelString: "Previous <%= @data.count %> Observations",
                        fontColor: '<%= DARK_GREY %>'
                    }
                }],
                yAxes: [{
                    display: true,
                    ticks: {
                        beginAtZero: false,
                        // min: 0,
                        padding: 5
                    },
                    gridLines: {
                        display: true,
                        zeroLineColor: '<%= CHART_LINE %>',
                        color: '<%= CHART_LINE %>'
                    },
                    scaleLabel: {
                        display: true,
                        labelString: 'Percent',
                        fontColor: '<%= DARK_GREY %>'
                    }
                }]
            }
        },
        plugins: {
            beforeInit(chart) {
                const originalFit = chart.legend.fit;
                chart.legend.fit = function fit() {
                    originalFit.bind(chart.legend)();
                    this.height += 12;
                }
            },
        }
    });
</script>
