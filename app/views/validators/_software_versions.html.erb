<div class="col-md-7 col-lg-8 mb-4 pb-2 mb-md-0 pb-md-0">
  <% if software_versions %>
    <div class="card">
      <div class="card-content">
        <h2 class="card-heading mb-4">Software Versions</h2>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <table class="table mb-0">
            <thead>
            <tr>
              <th>Software Version</th>
              <th>Stake %</th>
              <th>No. validators</th>
            </tr>
            </thead>
            <tbody>
              <% sort_software_versions(software_versions).each do |group| %>
                <% if group.first[1].is_a?(Hash) %>
                  <tr>
                    <td class="<%= group.first[0] == current_software_version(batch, params[:network]) ? 'h4 text-success' : '' %>">
                      <%= link_to group.first[0], root_path(q: group.first[0]), title: 'Click to show validators with this version' %>
                    </td>
                    <td class="<%= group.first[0] == current_software_version(batch, params[:network]) ? 'h4 text-success' : '' %>">
                      <%= group.first[1]['stake_percent'].to_f %>%
                    </td>
                    <td class="<%= group.first[0] == current_software_version(batch, params[:network]) ? 'h4 text-success' : '' %>">
                      <%= group.first[1]['count'] %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="px-15">
        <p class="small muted mt-2">
          Please note that only active validators are included in the table above.
        </p>
      </div>
    </div>

  <% end %>
</div>
