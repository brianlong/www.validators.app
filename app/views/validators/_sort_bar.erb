<div class="row">
  <div class="col-lg-5 col-xl-4 pr-0 mb-2">
    <%= link_to 'Score',
                url_for(order: 'score', page: params[:page], network: params[:network], refresh: params[:refresh]),
                class: "btn btn-xs mr-1 mb-3 btn-secondary #{ 'active' unless %w[random name stake].include?(params[:order]) }" %>

    <%= link_to 'Stake',
                url_for(order: 'stake', page: params[:page], network: params[:network], refresh: params[:refresh]),
                class: "btn btn-xs mr-1 mb-3 btn-secondary #{ 'active' if params[:order] == 'stake' }" %>
    <div class="btn-group mb-3">
      <%= link_to 'Score V1',
                  url_for(controller: 'validators', action: 'index', order: params[:order], page: params[:page], network: params[:network], refresh: params[:refresh]),
                  class: "btn btn-xs btn-secondary nav-link #{ 'active' if version == 'v1' }" %>
      <%= link_to 'Score V2',
                  url_for(controller: 'validators', action: 'index_v2', order: params[:order], page: params[:page], network: params[:network], refresh: params[:refresh]),
                  class: "btn btn-xs btn-secondary nav-link #{ 'active' if version == 'v2' }" %>
    </div>
  </div>

  <div class="col-lg-7 col-xl-8 pl-lg-0">
    <%= render 'validators/search_bar' %>
  </div>
</div>
