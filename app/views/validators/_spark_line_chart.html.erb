<canvas id="<%= local_assigns[:chart_name] %>"></canvas>
<script type="text/javascript">
    var ctx = document.getElementById("<%= local_assigns[:chart_name] %>").getContext('2d');

    var chart = new Chart(ctx, {
        type: 'line',

        data: {
            labels: <%= local_assigns[:vector].to_a.count.downto(1).to_a %>,
            datasets: [
                {
                    label: ' <%= local_assigns[:label] %> ',
                    fill: true,
                    borderColor: "<%= local_assigns[:line_color] %>",
                    backgroundColor: "<%= local_assigns[:fill_color] %>",
                    borderWidth: 1,
                    radius: 0,
                    data: <%= local_assigns[:vector] %>
                }
            ]
        },

        options: {
            animation: { duration: 0 }, // general animation time
            elements: {
                line: { tension: 0 } // disables bezier curves
            },
            hover: { mode: null },
            tooltips: { enabled: false },
            responsiveAnimationDuration: 0, // animation duration after a resize
            legend: {
                labels: {
                    fontColor: '<%= DARK_GREY %>',
                    boxWidth: 8,
                    boxHeight: 8,
                    usePointStyle: true,
                    padding: 5,
                    fontSize: 14

                },
            },
            scales: {
                xAxes: [{
                    display: true,
                    ticks: { display: false },
                    gridLines: { display: false },
                    scaleLabel: {
                        display: true,
                        labelString: "Previous <%= local_assigns[:vector].to_a.count %> Observations",
                        fontColor: '<%= DARK_GREY %>'
                    }
                }],
                yAxes: [{
                    display: true,
                    ticks: {
                        min: 0,
                        padding: 5
                    },
                    gridLines: {
                        display: true,
                        zeroLineColor: '<%= CHART_LINE %>',
                        color: '<%= CHART_LINE %>'
                    },
                    scaleLabel: {
                        display: true,
                        labelString: "<%= local_assigns[:y_axis_desc] ? local_assigns[:y_axis_desc] : 'Dist Behind Leader' %>",
                        fontColor: '<%= DARK_GREY %>'
                    }
                }]
            }
        },
        plugins: {
            beforeInit(chart) {
                const originalFit = chart.legend.fit;
                chart.legend.fit = function fit() {
                    originalFit.bind(chart.legend)();
                    this.height += 10;
                }
            },
        }
    });
</script>
