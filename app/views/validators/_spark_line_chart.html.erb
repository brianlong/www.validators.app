<canvas id="<%= local_assigns[:chart_name] %>"></canvas>
<script type="text/javascript">
    var ctx = document.getElementById("<%= local_assigns[:chart_name] %>").getContext('2d');
    var chart = new Chart(ctx, {
        // The type of chart we want to create
        type: 'line',

        // The data for our dataset
        data: {
            // x-axis labels
            labels: <%= local_assigns[:vector].to_a.count.downto(1).to_a %>,
            // An Array of JSON hashes for each dataset to plot. The y-axis is
            // dynamicly calculated. Look for othe options to control the y-axis if desired.
            datasets: [
                {
                    label: ' <%= local_assigns[:label] %> ',
                    fill: true,
                    backgroundColor: '<%= local_assigns[:fill_color] %>',
                    borderColor: '<%= local_assigns[:line_color] %>',
                    borderWidth: 1,
                    radius: 0,
                    data: <%= local_assigns[:vector] %>
                }
            ]
        },

        // Configuration options go here
        options: {
            animation: { duration: 0 }, // general animation time
            elements: { line: { tension: 0 } }, // disables bezier curves
            hover: { mode: null },
            tooltips: { enabled: false },
            responsiveAnimationDuration: 0, // animation duration after a resize
            legend: {
                labels: {
                    fontColor: '<%= DARK_GREY %>'
                },
            },
            scales: {
                xAxes: [{
                    display: true,
                    ticks: {display: false},
                    gridLines: {display: false},
                    scaleLabel: {
                        display: true,
                        labelString: "Previous <%= local_assigns[:vector].to_a.count %> Observations",
                        fontColor: '<%= DARK_GREY %>'
                    }
                }],
                yAxes: [{
                    display: true,
                    ticks: {
                        min: 0,
                        padding: 5
                    },
                    gridLines: {
                        display: true,
                        zeroLineColor: '<%= CHART_LINE %>',
                        color: '<%= CHART_LINE %>'
                    },
                    scaleLabel: {
                        display: true,
                        labelString: 'Dist Behind Leader',
                        fontColor: '<%= DARK_GREY %>'
                    }
                }]
            }
        }
    });
</script>
