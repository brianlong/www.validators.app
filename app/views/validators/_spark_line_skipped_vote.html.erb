<canvas id="spark_line_skipped_vote_<%= local_assigns[:account] %>"></canvas>
<script type="text/javascript">
    var ctx = document.getElementById("spark_line_skipped_vote_<%= local_assigns[:account] %>").getContext('2d');
    var chart = new Chart(ctx, {
        type: 'gauge',
        data: {
            //labels: ['Success', 'Warning', 'Warning', 'Error'],
            datasets: [{
                data: [-2.5, 0, 2.5, 4],
                value: <%= local_assigns[:value] %>,
                minValue: -4,
                maxValue: 4,
                backgroundColor: ['<%= LIGHT_GREY %>', '<%= GREEN %>', '<%= GREEN %>', '<%= LIGHT_GREY %>'],
                borderWidth: 0.5
            }]
        },
        options: {
            responsive: true,
            title: {
                display: false
            },
            layout: {
                padding: {
                    left: 0,
                    right: 0
                }
            },
            needle: {
                radiusPercentage: 0,
                widthPercentage: 10,
                lengthPercentage: 80,
                color: '#120f21'
            },
            valueLabel: {
                display: false
            }
        }
    });
</script>