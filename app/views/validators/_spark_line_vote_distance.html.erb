<canvas id="spark_line_vote_distance_<%= local_assigns[:account] %>"></canvas>
<script type="text/javascript">
  var ctx = document.getElementById("spark_line_vote_distance_<%= local_assigns[:account] %>").getContext('2d');
  var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'line',

    // The data for our dataset
    data: {
        // x-axis labels
        labels: <%= local_assigns[:vector].count.downto(1).to_a %>,
        // An Array of JSON hashes for each dataset to plot. The y-axis is
        // dynamicly calculated. Look for othe options to control the y-axis if
        // desired.
        datasets: [
          {
            label: 'Vote Diff',
            fill: true,
            borderColor: "<%= local_assigns[:line_color] %>",
            backgroundColor: "<%= local_assigns[:line_color] %>",
            borderWidth: 1,
            radius: 0,
            data: <%= local_assigns[:vector] %>
          }
        ]
    },

    // Configuration options go here
    options: {
      animation: { duration: 0 }, // general animation time
      elements: { line: { tension: 0 } }, // disables bezier curves
      hover: { animationDuration: 0 }, // duration of animations when hovering
      responsiveAnimationDuration: 0, // animation duration after a resize
      legend: { display: false },
      scales: {
				xAxes: [{
					display: true,
          ticks: { display: false },
          gridLines: { display: false },
					scaleLabel: {
						display: false,
						labelString: ''
					}
				}],
				yAxes: [{
					display: true,
          ticks: {
					  min: 0,
            padding: 3,
            fontColor: "#979797"
          },
          gridLines: {
					  display: true,
            zeroLineColor: '#322f3d'
          },
					scaleLabel: {
						display: false,
						labelString: ''
					}
				}]
			}
    }
  });
</script>
