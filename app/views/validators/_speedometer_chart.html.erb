<!-- required parameters: canvas_name, chart_steps, value, min_value -->

<canvas id="<%= local_assigns[:canvas_name] %>"></canvas>
<script type="text/javascript">
    var ctx = document.getElementById("<%= local_assigns[:canvas_name] %>").getContext('2d');
    var chart = new Chart(ctx, {
        type: 'gauge',
        data: {
            datasets: [{
                data: <%= local_assigns[:chart_steps] %>,
                value: <%= local_assigns[:value] %>,
                minValue: <%= local_assigns[:min_value] %>,
                maxValue: <%= local_assigns[:max_value] %>,
                backgroundColor: [
                    '<%= LIGHT_GREY_SPEEDOMETER %>',
                    '<%= BLUE_SPEEDOMETER %>',
                    '<%= GREEN_SPEEDOMETER %>'
                ],
                borderColor: ['<%= LIGHT_GREY %>', '<%= BLUE %>', '<%= GREEN %>'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            title: {
                display: false
            },
            layout: {
                padding: {
                    left: 0,
                    right: 0
                }
            },
            needle: {
                radiusPercentage: 0,
                widthPercentage: 5,
                lengthPercentage: 80,
                color: '<%= DARK_GREY %>'
            },
            valueLabel: {
                display: false
            }
        }
    });
</script>
