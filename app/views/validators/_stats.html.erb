<div class="card">
  <div class="card-content">
<!--    <h2 class="card-heading">Main Cluster Stats</h2>-->

    <div class="row px-5 text-center">
      <div class="col-6 col-md-3 mb-3">
        <small class="text-muted">Epochs:</small>
        <div class="h2 text-purple"><%= @this_epoch&.epoch %></div>
      </div>
      <div class="col-6 col-md-3 mb-3">
        <small class="text-muted">Validators:</small>
        <div class="h2 text-purple"><%= @validators_count %></div>
      </div>
      <div class="col-6 col-md-3 mb-3">
        <small class="text-muted">Softw. Version:</small>
        <div class="h2 text-purple">
          <%= params[:network] == 'mainnet' ? MAINNET_CLUSTER_VERSION : TESTNET_CLUSTER_VERSION %>
        </div>
      </div>
      <div class="col-6 col-md-3 mb-3">
        <small class="text-muted">Other Stats:</small>
        <div class="h2 text-purple">XXX</div>
      </div>
    </div>

  </div>
</div>