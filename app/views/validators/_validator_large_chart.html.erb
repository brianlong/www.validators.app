<script type="text/javascript">
    var ctx = document.getElementById("<%= local_assigns[:chart_name] %>").getContext('2d');

    var dataset = ctx.canvas.dataset;
    var data = JSON.parse(dataset.data);

    var chart = new Chart(ctx, {
        type: 'line',

        data: {
            labels: JSON.parse(dataset.labels),
            datasets: [
                {
                    label: ' <%= local_assigns[:label] %> ',
                    fill: true,
                    borderColor: "<%= SPARK_LINE_2 %>",
                    backgroundColor: "<%= SPARK_LINE_2_TRANSPARENT %>",
                    borderWidth: 1,
                    radius: 0,
                    data: data,
                    tension: 0
                }
            ]
        },

        options: {
            hover: {
                intersect: false,
            },
            tooltips: {
                enabled: true,
                intersect: false,
                displayColors: false,
                xPadding: 8,
                yPadding: 8,
                callbacks: {
                    label: function(tooltipItem) {
                        return "Distance: " + tooltipItem.yLabel;
                    },
                    title: function(tooltipItem) {
                        return tooltipItem[0].xLabel + " UTC";
                    },
                }
            },
            responsiveAnimationDuration: 0, // animation duration after a resize
            legend: {
                labels: {
                    fontColor: '<%= DARK_GREY %>',
                    boxWidth: 8,
                    boxHeight: 8,
                    usePointStyle: true,
                    padding: 5,
                    fontSize: 14

                },
            },
            scales: {
                xAxes: [{
                    display: true,
                    ticks: {
                        display: true,
                        minRotation: 0,
                        maxRotation: 0,
                        autoSkip: true,
                        autoSkipPadding: 30
                    },
                    gridLines: { display: false },
                    scaleLabel: {
                        display: true,
                        labelString: "Previous <%= local_assigns[:records_count] %> Observations",
                        fontColor: '<%= DARK_GREY %>'
                    }
                }],
                yAxes: [{
                    display: true,
                    ticks: {
                        min: 0,
                        padding: 5
                    },
                    gridLines: {
                        display: true,
                        zeroLineColor: '<%= CHART_LINE %>',
                        color: '<%= CHART_LINE %>'
                    },
                    scaleLabel: {
                        display: true,
                        labelString: "<%= local_assigns[:y_axis_desc] ? local_assigns[:y_axis_desc] : 'Dist Behind Leader' %>",
                        fontColor: '<%= DARK_GREY %>'
                    }
                }]
            }
        },
        plugins: {
            beforeInit(chart) {
                const originalFit = chart.legend.fit;
                chart.legend.fit = function fit() {
                    originalFit.bind(chart.legend)();
                    this.height += 12;
                }
            },
        }
    });
</script>
