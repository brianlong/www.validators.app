<canvas id="<%= local_assigns[:chart_name] %>"></canvas>
<script type="text/javascript">
    var ctx = document.getElementById("<%= local_assigns[:chart_name] %>").getContext('2d');
    var chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: <%= local_assigns[:vector].count.downto(1).to_a %>,
            datasets: [
                {
                    fill: false,
                    borderColor: "<%= local_assigns[:line_color] %>",
                    borderWidth: 1,
                    borderDash: [2, 2],
                    radius: 0,
                    data: <%= local_assigns[:vector] %>,
                    tension: 0
                },
                {
                    fill: false,
                    borderColor: "<%= local_assigns[:line_color] %>",
                    borderWidth: 1,
                    radius: 0,
                    data: <%= local_assigns[:moving_avg_vector] %>,
                    tension: 0
                }
            ]
        },

        options: {
            scales: {
                x: {
                    display: true,
                    ticks: { display: false },
                    grid: { display: false },
                    title: { display: false },
                },
                y: {
                    display: true,
                    ticks: {
                        color: '<%= DARK_GREY %>',
                        font: {
                            size: 11,
                        },
                    },
                    grid: { display: false },
                    title: { display: false },
                }
            },
            plugins: {
                tooltip: { enabled: false },
                legend: { display: false }
            },
        }
    });
</script>
