<canvas id="<%= local_assigns[:chart_name] %>"></canvas>
<script type="text/javascript">
    var ctx = document.getElementById("<%= local_assigns[:chart_name] %>").getContext('2d');
    var chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: <%= local_assigns[:vector].count.downto(1).to_a %>,
            datasets: [
                {
                    fill: true,
                    borderColor: "<%= local_assigns[:line_color] %>",
                    backgroundColor: "<%= local_assigns[:fill_color] %>",
                    borderWidth: 1,
                    radius: 0,
                    data: <%= local_assigns[:vector] %>,
                    tension: 0
                }
            ]
        },

        options: {
            scales: {
                x: {
                    display: true,
                    ticks: { display: false },
                    grid: { display: false },
                    title: { display: false },
                },
                y: {
                    display: true,
                    min: 0,
                    max: <%= Y_ROOT_DISTANCE_MAX %>,
                    ticks: {
                        color: '<%= DARK_GREY %>',
                        font: {
                            size: 11,
                        },
                    },
                    grid: { display: false },
                    title: { display: false }
                }
            },
            plugins: {
                tooltip: { display: false },
                legend: { display: false }
            },
        }
    });
</script>
