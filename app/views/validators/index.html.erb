<p id="notice"><%= notice %></p>

<h1><%= params[:network].capitalize%> Validators</h1>
<div class="row">
  <div class="col-sm-12">
    <table class='table table-striped'>
      <thead class="thead-dark">
        <tr>
          <th>Identity Account</th>
          <th>Vote Account</th>
        </tr>
      </thead>

      <tbody>
        <% @validators.each do |validator| %>
          <tr>
            <td>
              <%= link_to validator.account, validator_url(network: params[:network], account: validator.account) %>
            </td>
            <td>
              <%=
                  link_to validator.vote_accounts.last.account,
                    vote_account_url(
                      network: params[:network],
                      account: validator.vote_accounts.last.account
                    )
               %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
